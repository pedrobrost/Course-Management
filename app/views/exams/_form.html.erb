<%= form_for([@exam.course, @exam]) do |f| %>
  <% if @exam.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <ul>
      <% @exam.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, 'Título' %><br />
    <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
  <div class="form-group">
    <%= f.label :date, "Fecha" %><br />
    <%= f.date_select :date, start_year: @course.year  %>
  </div>
  <div class="form-group">
    <%= f.label :minimum, 'Nota mínima' %><br />
    <%= f.number_field :minimum, class: "form-control", step: :any, placeholder: "Minimum" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit 'Guardar examen', class: "btn btn-primary" %>
  </div>
<% end %>