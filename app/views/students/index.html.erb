<h1>Listing students</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Dni</th>
    <th>Number</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= student.first_name %></td>
    <td><%= student.last_name %></td>
    <td><%= student.dni %></td>
    <td><%= student.number %></td>
    <td><%= student.email %></td>
    <td><%= link_to 'Show', [student.course, student] %></td>
    <td><%= link_to 'Edit', edit_course_student_path(student.course, student) %></td>
    <td><%= link_to 'Destroy', [student.course, student], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

