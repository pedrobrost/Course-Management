<div class="container box">
  <div class="row">
    <div class="col">
      <h1>Alumnos</h1>
    </div>
    <div class="col-4 text-right">
      <%= link_to 'Nuevo alumno', new_course_student_path(@course), class: "btn btn-outline-primary" %>
      <%= link_to 'Atrás', course_path(@course), class: "btn btn-secondary" %>
    </div>
  </div>
  <blockquote class="blockquote">
    <p class="mb-0"><%= @course.year %></p>
  </blockquote>

  <div class="row student-table">
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>DNI</th>
          <th>Legajo</th>
          <th>Email</th>
          <th>Opciones</th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <th>Nombre</th>
          <th>DNI</th>
          <th>Legajo</th>
          <th>Email</th>
          <th>Opciones</th>
        </tr>
      </tfoot>
      <tbody>
        <% @students.each do |student| %>
          <tr>
            <td>
              <%= student %>
            </td>
            <td>
              <%= student.dni %>
            </td>
            <td>
              <%= student.number %>
            </td>
            <td>
              <%= student.email %>
            </td>
            <td>
              <%= link_to [student.course, student], class: "btn btn-outline-primary" do %>
                <i class="fas fa-eye"></i>
              <% end %>
              <%= link_to edit_course_student_path(student.course, student), class: "btn btn-outline-primary" do %>
                <i class="fas fa-edit"></i>
              <% end %>
              <%= link_to [student.course, student], :data => {:confirm => '¿Seguro desea eliminar al alumno?'}, :method => :delete, class: "btn btn-outline-primary" do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
</div>
</div>