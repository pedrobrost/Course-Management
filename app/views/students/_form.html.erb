    <%= f.label :dni, 'DNI' %><br />
    <%= f.text_field :dni, class: "form-control", placeholder: "DNI" %>
  </div>
  <div class="form-group">
    <%= f.label :number %><br />
    <%= f.text_field :number, class: "form-control", placeholder: "Number" %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
  </div>
