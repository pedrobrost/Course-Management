<div class="container box">
  <div class="row">
    <div class="col">
      <h1><%= @course.title %></h1>
    </div>
    <div class="col text-right">
      <%= link_to 'Back', courses_path, class: "btn btn-secondary" %>
    </div>
  </div>
  <p>
    <strong>Year:</strong>
    <%= @course.year %>
  </p>

  <% @exams = @course.exams.order('date') %>

  <div class="row">
    <table class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">DNI</th>
          <th scope="col">Number</th>
          <% @exams.each do |exam| %>
            <th scope="col">
              <%= link_to exam.title, course_exam_path(@course, exam) %> 
            </th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @course.students.each do |student| %>
          <tr>
            <td><%= student %></td>
            <td><%= student.dni %></td>
            <td><%= student.number %></td>
            <% @exams.each do |exam| %>
              <% if student.attended_to?(exam) %>
                <% score = student.score_for(exam) %>
                <% if student.passed?(exam) %>
                  <td class="exam-td text-success"><%= score %></td>
                <% else %>
                  <td class="exam-td text-danger"><%= score %></td>
                <% end %>
              <% else %>
                <td class="exam-td text-secondary">Absent</td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
          <tr>
            <td colspan="3">Aprobados</td>
            <% @exams.each do |exam| %>
              <td scope="col"><%= exam.approved %></td>
            <% end %>
          </tr>
          <tr>
            <td colspan="3">Desaprobados</td>
            <% @exams.each do |exam| %>
              <td scope="col"><%= exam.failed %></td>
            <% end %>
          </tr>
          <tr>
            <td colspan="3">Ausentes</td>
            <% @exams.each do |exam| %>
              <td scope="col"><%= exam.absent_students %></td>
            <% end %>
          </tr>
          <tr>
            <td colspan="3">Porcentaje de aprobaci√≥n</td>
            <% @exams.each do |exam| %>
              <td scope="col"><%= number_to_percentage(exam.approved_percentage, precision: 0) %></td>
            <% end %>
          </tr>
      </tbody>
    </table>
  </div>
</div>
